<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E4EFFA"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.question_data.ListeningQuestionActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lis"
        android:textColor="#436EEE"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center"/>

    <!-- Thanh tiến trình -->
    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/progressContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"/>
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:gravity="center|start"
                android:drawableLeft="@drawable/grommet_icons_assist_listening"
                android:drawablePadding="10dp"
                android:text="@string/listen_rewrite"
                android:textSize="22sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_60">

                    <!-- Nút nghe tùy chỉnh -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="3dp"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Biểu tượng loa -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/listening" />
                    </LinearLayout>
                    <!-- Vòng tròn 1 -->
                    <View
                        android:id="@+id/wave_1"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:background="@drawable/circle_shape2"
                        android:alpha="0.5"
                        android:layout_gravity="center" />

                    <!-- Vòng tròn 2 -->
                    <View
                        android:id="@+id/wave_2"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:background="@drawable/circle_shape2"
                        android:alpha="0.3"
                        android:layout_gravity="center" />

                    <!-- Vòng tròn 3 -->
                    <View
                        android:id="@+id/wave_3"
                        android:layout_width="260dp"
                        android:layout_height="260dp"
                        android:background="@drawable/circle_shape2"
                        android:alpha="0.1"
                        android:layout_gravity="center" />
                    <LinearLayout
                        android:id="@+id/btnListen"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="3dp"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Biểu tượng loa -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/listening2" />
                    </LinearLayout>
                </FrameLayout>

                <ImageView
                    android:id="@+id/btnReplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/icon_restart"/>
            </LinearLayout>

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:drawableLeft="@drawable/fe_question"
        android:drawablePadding="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />
            <ImageView
                android:id="@+id/imgLessonMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="gone" />
            <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#87CEFA"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <EditText
            android:id="@+id/etAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="30"
            android:hint="@string/answer"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnCheckResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check"
        android:backgroundTint="#436EEE"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <FrameLayout
        android:id="@+id/popupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</LinearLayout>