<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E4EFFA"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.question_data.RecordQuestionActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record"
        android:textColor="#436EEE"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center" />

    <!-- Thanh tiến trình -->
    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/progressContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- ScrollView sẽ chiếm hết không gian còn lại -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center|start"
                android:drawableLeft="@drawable/grommet_icons_assist_listening"
                android:text="@string/ans_record"
                android:drawablePadding="5dp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/fe_question"
                android:layout_marginTop="@dimen/dp_30"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:drawablePadding="10dp"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvphoneme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <!-- Cụm nút loa được đặt ở đây, bên dưới ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="24dp">

        <!-- Tôi đã xóa marginLeft để nút được căn giữa một cách chính xác -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Nút nghe tùy chỉnh (đã thu nhỏ) -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <!-- Biểu tượng loa -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_record" />
            </LinearLayout>

            <!-- Vòng tròn 1 (đã thu nhỏ) -->
            <View
                android:id="@+id/wave_1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:background="@drawable/circle_shape2" />

            <!-- Vòng tròn 2 (đã thu nhỏ) -->
            <View
                android:id="@+id/wave_2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:alpha="0.3"
                android:background="@drawable/circle_shape2" />

            <!-- Vòng tròn 3 (đã thu nhỏ) -->
            <View
                android:id="@+id/wave_3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:alpha="0.1"
                android:background="@drawable/circle_shape2" />

            <LinearLayout
                android:id="@+id/imgVoice"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <!-- Biểu tượng loa -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_record2" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/popupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</LinearLayout>