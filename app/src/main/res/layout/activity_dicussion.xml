<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DiscussionActivity"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Nút quay lại -->
    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/txt_discussion"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:drawableStart="@drawable/icon_back"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Danh sách bình luận -->

    <!-- Container cho phần nhập bình luận -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_discussions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-15dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <!-- Thanh hiển thị "Đang phản hồi ..." -->
            <LinearLayout
                android:id="@+id/replyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:background="@color/light_gray"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/txtReplyingTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang phản hồi "
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtReplyUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtCancelReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" · Hủy"
                    android:paddingStart="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/grayy"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>

            <!-- Phần nhập bình luận -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_bg"
                android:padding="8dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/editDiscussion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/comment"
                    android:textSize="16sp"
                    android:background="@null"
                    android:padding="8dp"/>

                <ImageView
                    android:id="@+id/btSendDiscussion"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_send"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
