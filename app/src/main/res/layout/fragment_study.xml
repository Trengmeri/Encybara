<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_study"
    android:padding="@dimen/dp_16">

    <!-- Hàng chứa hai button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8F1FF"
        android:layout_marginTop="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMyCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text_Button_All"
            android:layout_weight="1"
            android:background="@drawable/bg_mycourse"
            android:textSize="16sp"
            android:text="@string/mycourse"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAllCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text_Button_All"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="@string/suggestcourse"
            android:background="@drawable/bg_allcourse"/>
    </LinearLayout>

    <!-- ViewPager2 để hiển thị Fragment -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
